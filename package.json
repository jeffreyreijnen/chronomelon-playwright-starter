{
  "name": "chronomelon-playwright-starter",
  "version": "0.1.0",
  "private": false,
  "description": "Professional Playwright starter: UI + API + CI with POM, stable selectors, and artifacts.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/chronomelon-playwright-starter.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/chronomelon-playwright-starter/issues"
  },
  "homepage": "https://github.com/your-username/chronomelon-playwright-starter#readme",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "install:browsers": "npx playwright install --with-deps",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "report": "playwright show-report",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^20.19.19",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "allure-playwright": "^2.15.1",
    "dotenv": "^16.6.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-playwright": "^0.16.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
